    "import math\n",
    "\n",
    "class Solution:\n",
    "    def encode(self, n: int) -> str:\n",
    "        if n == 0: return ''\n",
    "        digits = int(math.log2(n+1))\n",
    "        offset = n+1 - 2**digits\n",
    "        return bin(offset)[2:].zfill(digits)"
   ]
  },
